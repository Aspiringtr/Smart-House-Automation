<Window x:Class="cctv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cctv"
        mc:Ignorable="d"
        Title="DEMonitor" 
        Height="673" 
        Width="952" 
        Background="Transparent"
        WindowStyle="None" 
        AllowsTransparency="True"
        WindowState="Minimized"
        Icon="/asserts/images/logo.ico">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"  ResizeBorderThickness="5"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>

        <Style x:Key="nav-btn" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF8C8C8C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="left"/>
            <Setter Property="Padding" Value="0 5 0 5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Grid.Column="1" Panel.ZIndex="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="154"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions >
                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image Source="/asserts/images/logo.png" Width="30" Margin="10 0" Opacity=".8"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontWeight="Bold" Foreground="white" Opacity=".8">DEMonitor</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="7" Foreground="white" Opacity=".4">A project by Aspirin</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="1" Height="40" Background="#14131b" CornerRadius="20">
                            <TextBlock VerticalAlignment="Center" Padding="20 0 0 0" Foreground="#33FDFDFD">All the cameras are active</TextBlock>
                        </Border>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <Grid >
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition />
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Button Cursor="Hand" Grid.Column="4" Width="40" Height="40"  BorderThickness="0" Tag="25" Background="#2c2b39">
                            <Image Source="/asserts/images/notification.png" Width="20" Height="20" Opacity=".4"/>
                        </Button>
                        <Button Cursor="Hand" Grid.Column="2" Width="40" Height="40"  BorderThickness="0" Tag="25" Background="#2c2b39">
                            <Image Source="/asserts/images/settings.png" Width="20" Height="20" Opacity=".4"/>
                        </Button>
                        <Button Grid.Column="0" Width="Auto" Height="40"  BorderThickness="0" Tag="20" Background="#14131b" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        <Border Background="#22212f" Grid.ColumnSpan="4" Grid.RowSpan="4" CornerRadius="10" MouseLeftButtonDown="DragWindow">

        </Border>
        <Border Grid.Row="2" CornerRadius="10" Background="#111217" Grid.Column="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="145" />
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5" />
                    <RowDefinition />
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="1" Grid.Column="1" CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF15141A"/>
                            <GradientStop Color="#FF15141A" Offset="0.781"/>
                            <GradientStop Color="#FF292333" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Padding="10 10 10 10">
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Foreground="#FF8C8C8C" Margin="0 0 0 10">SURVEILLANCE</TextBlock>
                                <Border Grid.Row="1" Background="#2c2b31" VerticalAlignment="Center" CornerRadius="5" >
                                    <Button Style="{StaticResource nav-btn}" Click="dashBoardClick"  >
                                        <StackPanel Orientation="Horizontal">
                                            <Image Margin="10 0 0 0" Source="asserts/images/dashBoard.png" Width="15" Height="15" Opacity="0.4" />
                                            <TextBlock Padding="10 5">Dash Board</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                                <Border Grid.Row="2" Background="Transparent" VerticalAlignment="Center" CornerRadius="5" >
                                    <Button  Style="{StaticResource nav-btn}" Click="liveViewClick">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Image Margin="10 0 0 0" Source="asserts/images/live.png" Width="15" Height="15" Opacity=".4"/>
                                            <TextBlock Padding="10 5">Live View</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                                <Border Grid.Row="3" Background="Transparent" VerticalAlignment="Center" CornerRadius="5">
                                    <Button  Style="{StaticResource nav-btn}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Image Margin="10 0 0 0" Source="asserts/images/recording.png" Width="15" Height="15" Opacity=".4"/>
                                            <TextBlock Padding="10 5">Footage</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                                <Border Grid.Row="4" Background="Transparent" VerticalAlignment="Center" CornerRadius="5">
                                    <Button  Style="{StaticResource nav-btn}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Image Margin="10 0 0 0" Source="asserts/images/camera.png" Width="15" Height="15" Opacity=".4"/>
                                            <TextBlock Padding="10 5">Camera</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </Grid>
                        </Border>
                        <Border Grid.Row="1" Padding="10 10 10 10">
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Foreground="#FF8C8C8C" Margin="0 0 0 10">SMART HOME</TextBlock>
                                <Border Grid.Row="1" Background="Transparent" VerticalAlignment="Center" CornerRadius="5" >
                                    <Button Style="{StaticResource nav-btn}" >
                                        <StackPanel Orientation="Horizontal">
                                            <Image Margin="10 0 0 0" Source="asserts/images/dashBoard.png" Width="15" Height="15" Opacity="0.4" />
                                            <TextBlock Padding="10 5">Room Control</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                                <Border Grid.Row="2" Background="Transparent" VerticalAlignment="Center" CornerRadius="5" >
                                    <Button  Style="{StaticResource nav-btn}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Image Margin="10 0 0 0" Source="asserts/images/live.png" Width="15" Height="15" Opacity=".4"/>
                                            <TextBlock Padding="10 5">Board</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </Grid>
                        </Border>
                        <Border Grid.Row="3" Margin="10" CornerRadius="10" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                            <RotateTransform Angle="-26.565" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="#FFE6D8F9" Offset="1"/>
                                    <GradientStop Color="#FFD5B8FF" Offset="0.445"/>
                                    <GradientStop Color="#FFAC8BDD" Offset="0.007"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFC9C9C9" Offset="1"/>
                                    <GradientStop Color="#FF200E40" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Button BorderThickness="0" Background="Transparent" Cursor="Hand" Click="dashBoardClick">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/asserts/images/upgraded.png" Width="10" Margin="0 0 5 0"/>
                                    <TextBlock FontSize="9" FontWeight="Bold" Foreground="White">Upgrade to Pro</TextBlock>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>
                </Border>
                <Border Background="#15141a" Grid.Row="1" Grid.Column="3" CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Frame x:Name="MainContent" NavigationUIVisibility="Hidden" Grid.Column="0"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
